# Use Node.js LTS slim
FROM node:20-slim

# Set environment variables - Cloud Run will set PORT to 8080
ENV NODE_ENV=production
ENV PORT=8080
ENV HOST=0.0.0.0

# Set working directory
WORKDIR /app

# Copy application code
COPY . .

# Expose the port
EXPOSE 8080

# Use node to start the server
CMD ["node", "dist/index.js"]
